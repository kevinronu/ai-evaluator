    >
      <h1
        class="text-gray-700 dark:text-gray-200 text-2xl font-medium hover:rounded-md hover:bg-pink-400 dark:hover:bg-pink-600"
      >
        Evalu<span class="font-bold text-pink-500 align-baseline">AI</span>tor
      </h1>
    </a>
    <label class="relative text-[1em] inline-block w-[3.5em] h-[2em]">
      <input
        type="checkbox"
        class="peer w-0 h-0 opacity-0"
        data-ref="theme-toggle"
      />
      <span
        class="absolute cursor-pointer inset-0 bg-sky-500 transition duration-400 rounded-[1.875rem]
        before:absolute before:content-[''] before:h-[1.4em] before:w-[1.4rem] before:rounded-[1.25rem] before:left-[0.3rem] before:bottom-[0.3em] before:bg-yellow-300 before:transition before:duration-400
         peer-checked:bg-black peer-checked:before:bg-black peer-checked:before:translate-x-[1.5em] peer-checked:before:rounded-[3.125rem] peer-checked:before:shadow-[inset_9px_0px_1px_0px_white]"
      ></span>
    </label>
  </div>
</header>
<script is:inline>
  const theme = (() => {
    const localStorageTheme = localStorage?.getItem("theme") ?? "";

    if (["dark", "light"].includes(localStorageTheme)) {
      return localStorageTheme;
    }

    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "dark";
    }

    return "light";
  })();

  if (theme === "light") {
    document.documentElement.classList.remove("dark");
  } else {
    document.documentElement.classList.add("dark");
  }

  window.localStorage.setItem("theme", theme);

  const handleInputChange = () => {
    document.documentElement.classList.toggle("dark");

    const isDark = document.documentElement.classList.contains("dark");

    localStorage.setItem("theme", isDark ? "dark" : "light");
  };

  const checkbox = document.querySelector(`[data-ref="theme-toggle"]`);

  if (checkbox instanceof HTMLInputElement) {
    checkbox.checked = theme === "dark";
    checkbox.addEventListener("change", handleInputChange);
  }
</script>
